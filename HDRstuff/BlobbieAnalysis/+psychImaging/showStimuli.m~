function showStimuli(k, width, height)

    global PsychImagingEngine
    
    try

        % Draw Target (Samsung) texture on the left
        x0 = PsychImagingEngine.screenRect(3)/2-size(frameBufferImageSamsung,2)/2-5;
        y0 = PsychImagingEngine.screenRect(4)/2 + PsychImagingEngine.screenRect(4)/5;
        targetDestRect = CenterRectOnPointd(...
            [0 0 width height], ...
            x0,y0...
            );
        sourceRect = []; rotationAngle = 0; filterMode = []; globalAlpha = 1.0;
        Screen('DrawTexture', PsychImagingEngine.masterWindowPtr, PsychImagingEngine.texturePointersSamsung(k), sourceRect, targetDestRect, rotationAngle, filterMode, globalAlpha);     % foreground

        Screen('TextSize',  PsychImagingEngine.masterWindowPtr, 30);
        Screen('TextFont',  PsychImagingEngine.masterWindowPtr,'Monaco');
        Screen('TextStyle', PsychImagingEngine.masterWindowPtr, 1);
        Screen('DrawText',  PsychImagingEngine.masterWindowPtr,'Samsung rendering', x0-180, PsychImagingEngine.screenRect(4)/2-80, [255 230 250], [0 0 0]);
        
        % Draw Target (LCD) texture on the right
        x0 = PsychImagingEngine.screenRect(3)/2+width/2+5;
        targetDestRect = CenterRectOnPointd(...
            [0 0 width height], ...
            x0,y0...
            );
        Screen('DrawTexture', PsychImagingEngine.masterWindowPtr, PsychImagingEngine.texturePointersSamsung(k), sourceRect, targetDestRect, rotationAngle, filterMode, globalAlpha);     % foreground

        Screen('TextSize',  PsychImagingEngine.masterWindowPtr, 30);
        Screen('TextFont',  PsychImagingEngine.masterWindowPtr,'Monaco');
        Screen('TextStyle', PsychImagingEngine.masterWindowPtr, 1);
        Screen('DrawText',  PsychImagingEngine.masterWindowPtr,'LCD rendering', x0-140, PsychImagingEngine.screenRect(4)/2-80, [255 230 250], [0 0 0]);
         
        % Finally shown thumbsize images
        for k = 1:numel(PsychImagingEngine.thumbsizeTexturePointers)
            sourceRect = []; rotationAngle = 0; filterMode = []; globalAlpha = 1.0;
            Screen('DrawTexture', PsychImagingEngine.masterWindowPtr, PsychImagingEngine.thumbsizeTexturePointers(k), ...
                sourceRect, PsychImagingEngine.thumbsizeTextureDestRects{k}, rotationAngle, filterMode, globalAlpha);     % foreground
        end
        
        % Flip master display
        Screen('Flip', PsychImagingEngine.masterWindowPtr); 
        
        
    catch err
        psychImaging.restoreState();
        rethrow(err)
    end
    
end

